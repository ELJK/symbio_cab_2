<%= render 'shared/error_messages', object: f.object %>

<div class="control-group">
  <%= f.label :name, 'Имя', class: 'control-label' %>
  <div class="controls">
    <%= f.text_field :name, class: 'input-large' %>
  </div>
</div>

<div class="control-group">
<%= f.label :surname, 'Фамилия', class: 'control-label' %>
  <div class="controls">
    <%= f.text_field :surname, class: 'input-large' %>
  </div>
</div>

<div class="control-group">
<%= f.label :gender, 'Пол', class: 'control-label' %>
  <div class="controls">
    <label class="radio">
      <%= f.radio_button :gender, 'male', checked: true %>
      <%= f.label :gender, 'Мужской' %>
    </label>
    <label class="radio">
      <%= f.radio_button :gender, 'female' %>
      <%= f.label :gender, 'Женский' %>
    </label>
  </div>
</div>

<div class="control-group">
<%= f.label :dob, 'Дата рождения', class: 'control-label' %>
  <div class="controls" id="dob">
    <div class="input-append date">
    <%= f.text_field :dob, class: 'input-small', readonly: 'true' %>
      <span class="add-on"><i class="fa fa-calendar-o"></i></span>
    </div>

    <script type="text/javascript">
        $('#dob .input-append.date').datepicker({
            format: 'yyyy-mm-dd',
            startView: 2,
            todayBtn: true,
            language: "ru",
            autoclose: true,
            todayHighlight: true
        });
    </script>

  </div>
</div>

<div class="control-group">
<%= f.label :email, 'Email', class: 'control-label' %>
  <div class="controls">
    <%= f.text_field :email, class: 'input-large' %>
  </div>
</div>

