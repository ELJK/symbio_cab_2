<% provide(:title, "Настройки пользователя") %>

<div class="row">
  <div class="span8 offset2">
    <%= form_for @user, html: {class: "form-horizontal"} do |f| %>
        <fieldset>
          <legend><h3 class='text-center'>Настройки пользователя</h3></legend>
        <%= render 'fields', f: f %>

        <div class="form-actions">
            <%= f.submit "Сохранить изменения", class: "btn btn-large btn-primary" %>
        </div>
        </fieldset>
    <% end %>
  </div>
</div>